<!DOCTYPE html>
<html>
  <head>
    <title>Transports</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript" src='/javascripts/home.js'></script>
  </head>
  <body>
    <h1></h1>
    <h2>{{weather.weather}}, {{weather.tempMin}}&deg; to {{weather.tempMax}}&deg;</h2>
    {{#transports}}
    	<div class="transport">
    		<h3>To {{destination}}</h3>
    		{{#noConnection}}
    			<div>No connection: {{noConnection}}</div>
    		{{/noConnection}}
    		{{#connections}}
    			<div class="connection">
                    Plat. {{platform}} &#8594; {{delay}} minutes
    			</div>
    		{{/connections}}
    	</div>
    {{/transports}}
    <script type="text/javascript">
        var weather = {
            sunset: {{weather.sunset}},
            sunrise: {{weather.sunrise}}
        };
        console.log({{{debug}}});
    </script>
  </body>
</html>